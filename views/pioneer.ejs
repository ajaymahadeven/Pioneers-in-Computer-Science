<%- include('partials/headers/pioneer_header'); -%>
<div class="content-container">
  <header>
    <h1><%= pioneer.name %></h1>
  </header>
  <div class="image-container">
    <% if (!pioneer.image || pioneer.image.trim() === '') { %>
    <img
      src="/images/image_not_found.webp"
      alt="<%= pioneer.name %>"
      class="pioneer-not found"
    />
    <% } else { %>
    <img
      src="<%= pioneer.image %>"
      alt="<%= pioneer.name %>"
      class="pioneer-image"
    />
    <% } %>
  </div>
  <div class="housing-container">
    <div class="mac-menu">
      <span class="menu-button red"></span>
      <span class="menu-button yellow"></span>
      <span class="menu-button green"></span>
    </div>
    <div class="inner-container">
      <h2>About</h2>
      <p><%= pioneer.intro%></p>
    </div>
  </div>
  <div class="housing-container">
    <div class="mac-menu">
      <span class="menu-button red"></span>
      <span class="menu-button yellow"></span>
      <span class="menu-button green"></span>
    </div>
    <div class="inner-container">
      <h2>Achievements</h2>
      <p><%= pioneer.achievement%></p>
    </div>
  </div>
  <div class="housing-container">
    <div class="mac-menu">
      <span class="menu-button red"></span>
      <span class="menu-button yellow"></span>
      <span class="menu-button green"></span>
    </div>
    <div class="inner-container">
      <h2>Century and Year</h2>
      <p>Century: <strong><%= pioneer.century%></strong></p>
      <p>Year: <strong><%= pioneer.year%></strong></p>
    </div>
  </div>
  <div class="housing-container">
    <div class="mac-menu">
      <span class="menu-button red"></span>
      <span class="menu-button yellow"></span>
      <span class="menu-button green"></span>
    </div>
    <div class="inner-container">
      <h2>Classification (ACM Library)</h2>
      <p><%= pioneer.classification%></p>
    </div>
  </div>
  <div class="housing-container">
    <div class="mac-menu">
      <span class="menu-button red"></span>
      <span class="menu-button yellow"></span>
      <span class="menu-button green"></span>
    </div>
    <div class="inner-container">
      <h2>Birth Place</h2>
      <% if (!pioneer.birthCountry || pioneer.birthCountry.trim() === '' ||
      !pioneer.latitude || !pioneer.longitude) { %>
      <p>Country: <strong>Unknown</strong></p>
      <% } else { %>
      <p><%= pioneer.birthCountry%></p>
      <p>Latitude: <%= pioneer.latitude%></p>
      <p>Longitude: <%= pioneer.longitude%></p>
      <a
        href="https://maps.google.com/?q=<%= pioneer.latitude%>,<%= pioneer.longitude%>&ll=<%= pioneer.latitude%>,<%= pioneer.longitude%>&z=6"
        target="_blank"
      >
        <button class="button-54" role="button">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="25"
            height="25"
            fill="currentColor"
            class="bi bi-geo-alt"
            viewBox="0 0 16 16"
          >
            <path
              d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"
            />
            <path
              d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"
            />
          </svg>

          View Birth-Place *
        </button>
      </a>
      <p style="font-size: 1rem; margin-top: 30px">
        <strong>*</strong>The geographical coordinates associated with the
        birthplaces of the pioneers are accurate to the region level.
      </p>
      <% } %>
    </div>
  </div>
  <div class="housing-container">
    <div class="mac-menu">
      <span class="menu-button red"></span>
      <span class="menu-button yellow"></span>
      <span class="menu-button green"></span>
    </div>
    <div class="inner-container">
      <h2>To Know More...</h2>
      <div class="button-container">
        <a href="<%= pioneer.wikiUrl %>">
          <button class="button-53" role="button">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              fill="currentColor"
              class="bi bi-wikipedia"
              viewBox="0 0 20 16"
            >
              <path
                d="M8.835 3.003c.828-.006 2.688 0 2.688 0l.033.03v.288c0 .08-.045.12-.133.12-.433.02-.522.063-.68.29-.087.126-.258.393-.435.694l-1.52 2.843-.043.089 1.858 3.801.113.031 2.926-6.946c.102-.28.086-.478-.044-.595-.132-.114-.224-.18-.563-.195l-.275-.014a.161.161 0 0 1-.096-.035.1.1 0 0 1-.046-.084v-.289l.042-.03h3.306l.034.03v.29c0 .078-.045.117-.133.117-.433.02-.754.113-.962.281a1.64 1.64 0 0 0-.488.704s-2.691 6.16-3.612 8.208c-.353.672-.7.61-1.004-.019A224.05 224.05 0 0 1 8.044 8.81c-.623 1.285-1.475 3.026-1.898 3.81-.411.715-.75.622-1.02.019-.45-1.065-1.131-2.519-1.817-3.982-.735-1.569-1.475-3.149-1.943-4.272-.167-.4-.293-.657-.412-.759-.12-.1-.368-.16-.746-.18C.069 3.429 0 3.395 0 3.341v-.303l.034-.03c.615-.003 3.594 0 3.594 0l.034.03v.288c0 .08-.05.118-.15.118l-.375.016c-.322.013-.483.11-.483.288 0 .083.034.217.109.4.72 1.753 3.207 6.998 3.207 6.998l.091.023 1.603-3.197-.32-.71L6.24 5.095s-.213-.433-.286-.577l-.098-.196c-.387-.77-.411-.82-.865-.88-.137-.017-.208-.035-.208-.102v-.304l.041-.03h2.853l.075.024v.303c0 .069-.05.104-.15.104l-.206.03c-.523.04-.438.254-.09.946l1.057 2.163 1.17-2.332c.195-.427.155-.534.074-.633-.046-.055-.202-.144-.54-.158l-.133-.015a.159.159 0 0 1-.096-.034.099.099 0 0 1-.045-.085v-.288l.041-.03Z"
              />
            </svg>
            Wikipedia
          </button>
        </a>
        <% if (pioneer.mactutorUrl && pioneer.mactutorUrl.trim() !== '') { %>
        <a href="<%= pioneer.mactutorUrl %>">
          <button class="button-81" role="button">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              fill="currentColor"
              class="bi bi-infinity"
              viewBox="0 0 16 16"
            >
              <path
                d="M5.68 5.792 7.345 7.75 5.681 9.708a2.75 2.75 0 1 1 0-3.916ZM8 6.978 6.416 5.113l-.014-.015a3.75 3.75 0 1 0 0 5.304l.014-.015L8 8.522l1.584 1.865.014.015a3.75 3.75 0 1 0 0-5.304l-.014.015L8 6.978Zm.656.772 1.663-1.958a2.75 2.75 0 1 1 0 3.916L8.656 7.75Z"
              />
            </svg>
            MacTutor Index
          </button>
        </a>
        <% } %>
      </div>
    </div>
  </div>
  <div class="housing-container">
    <div class="mac-menu">
      <span class="menu-button red"></span>
      <span class="menu-button yellow"></span>
      <span class="menu-button green"></span>
    </div>
    <div class="inner-container">
      <h2>References</h2>
      <div class="reference-container">
        <ul style="list-style: none; margin-bottom: 20px !important">
          <% if (pioneer.image && pioneer.image.trim() !== '') { %>
          <li>
            <a href="<%= pioneer.image%>">
              <button class="button-47" role="button">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="25"
                  height="25"
                  fill="currentColor"
                  class="bi bi-image"
                  viewBox="0 0 19 16"
                >
                  <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                  <path
                    d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"
                  />
                </svg>

                Image Source
              </button>
            </a>
          </li>
          <% } %> <% if (pioneer.mactutorUrl && pioneer.mactutorUrl.trim() !==
          '') { %>
          <li>
            <a href="<%= pioneer.mactutorUrl %>">
              <button class="button-81" role="button">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="25"
                  height="25"
                  fill="currentColor"
                  class="bi bi-infinity"
                  viewBox="0 0 19 16"
                >
                  <path
                    d="M5.68 5.792 7.345 7.75 5.681 9.708a2.75 2.75 0 1 1 0-3.916ZM8 6.978 6.416 5.113l-.014-.015a3.75 3.75 0 1 0 0 5.304l.014-.015L8 8.522l1.584 1.865.014.015a3.75 3.75 0 1 0 0-5.304l-.014.015L8 6.978Zm.656.772 1.663-1.958a2.75 2.75 0 1 1 0 3.916L8.656 7.75Z"
                  />
                </svg>
                MacTutor Index
              </button>
            </a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%-include('partials/footers/footer'); -%>
